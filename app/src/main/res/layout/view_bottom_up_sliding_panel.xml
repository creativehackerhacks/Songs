<?xml version="1.0" encoding="utf-8"?>
<com.sothree.slidinguppanel.SlidingUpPanelLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/v_b_u_s_p_main_layout"
    android:gravity="bottom"
    app:umanoPanelHeight="44dp"
    app:umanoShadowHeight="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:id="@+id/v_b_u_s_p_first_layout">

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:gravity="center_vertical"
            android:id="@+id/v_b_u_s_p_first_layout_TV"
            android:text="Dream in blue"
            android:textColor="@color/PrimaryTextColor"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:text="Change"
            android:id="@+id/v_b_u_s_p_first_layout_BTN"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/v_b_u_s_p_second_layout"
        android:orientation="vertical"
        android:background="@color/accent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/PrimaryTextColor"
            android:gravity="center"
            android:text="Dream in blue"/>

    </LinearLayout>

</com.sothree.slidinguppanel.SlidingUpPanelLayout>